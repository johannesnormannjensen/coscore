    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug functions",
            "port": 9229
        },
        {
            "command": "firebase emulators:start",
            "name": "Start firebase emulator",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run test",
            "cwd": "${workspaceFolder}/functions",
            "name": "Test functions",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run test -- --watch",
            "cwd": "${workspaceFolder}/functions",
            "name": "Test functions watch",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run build",
            "cwd": "${workspaceFolder}/functions",
            "name": "Build functions",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "npm run build -- --watch",
            "cwd": "${workspaceFolder}/functions",
            "name": "Build functions watch",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}